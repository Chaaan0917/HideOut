
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "HideOut Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local OtherTab = Window:MakeTab({
	Name = "Other",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = OtherTab:AddSection({
	Name = "Auto Gears"
})

local selectedGear = "1" -- Default selected gear

-- Create the dropdown menu with 6 gear options
Tab:AddDropdown({
    Name = "Gear Selection",
    Default = "1", -- Default gear selected
    Options = {"1", "2", "3", "4", "5", "6"}, -- All 6 gears
    Callback = function(Value)
        selectedGear = Value -- Update the selected gear based on dropdown selection
        print("Selected Gear: " .. selectedGear)
    end    
})

-- Create a toggle to activate/deactivate the selected gear action
Tab:AddToggle({
    Name = "Activate Gear",
    Default = false, -- Toggle is off by default
    Callback = function(Value)
        loopRunning = Value -- Update the loop running state
        if loopRunning then
            spawn(function()
                while loopRunning do
                    -- Create the arguments based on the selected gear
                    local args = {
                        [1] = "Strength_" .. selectedGear -- Use the selected gear (1-6)
                    }

                    -- Fire the server event for the selected gear
                    game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("Events"):WaitForChild("MergeGears"):FireServer(unpack(args))
                    
                    -- Add a delay to avoid overloading the server
                    wait() -- Adjust the wait time if necessary
                end
            end)
        else
            print("Gear action stopped.")
        end
    end
})
